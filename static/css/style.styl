celeste = #29a6e5
azul = #266ee4
img
	width 100%
.contenedor
	width 1100px
	margin 0 auto
.logo
	margin 10px 0
	h1
		margin 0
		padding 0
	.logo-main
		width 300px
		color celeste
		&:hover
			color azul
.menu
	ul
		margin 0
		padding 0
		li
			list-style none	
.menu-enlinea
	ul
		li
			display inline-block
.menu-secundario
	margin-top 30px
	text-transform uppercase
	a
		color #626262
.menu-primario
	box-shadow 0 -1px 0 rgba(0, 0, 0, 0.08)
	.menu-main
		ul
			width 1100px
			margin 0 auto
			padding 0
		li
			a
				text-transform uppercase
				display inline-block
				padding 20px 50px
				color #626262
				&:hover,&.activo
					color #fff
					background celeste
					text-decoration none
				
#catalogo
	.filtro
		box-shadow 0 -1px 0 rgba(0, 0, 0, 0.08), 0 2px 4px rgba(0, 0, 0, 0.015)
		border-bottom 1px solid rgba(0, 0, 0, 0.08)
		padding 15px 0
		select
			float right
#carro
	.tabla_carro
		figure
			img
				width 100px
	.tabla_total
		width 500px
		thead
			display none
.productos
	margin 20px 0
	figure
		width 100%
		height 160px
		overflow hidden
#producto_single
	margin-top 30px
	.estrellas
		span
			cursor pointer
			color #ccc
			&.pintado
				color #000